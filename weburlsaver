    <title>URL Saver</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 10px;
            max-width: 300px;
        }
        .slot {
            margin: 5px 0;
        }
        input {
            width: 60%;
            margin-right: 5px;
        }
        button {
            width: 30%;
        }
        a {
            margin-left: 5px;
            color: blue;
            text-decoration: underline;
        }
        .instruction {
            font-size: 0.8em;
            color: gray;
            margin-bottom: 10px;
        }
    </style>
